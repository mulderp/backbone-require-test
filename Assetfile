
output "public"

# input defines operations on a set of files. All files processed in
# this block go into the output directory
input "source" do

  match "css/*.css" do
    concat "css/main.css"
  end

  # Repeat for javascript files
  match "js/**/*.js" do
    copy
  end

  match "data/**" do
    copy
  end

  match "templates/**" do
    copy
  end

  match "img/**" do
    copy
  end

  match "index.html" do
    copy
  end

end
